# Environment variables for Hyperlocal Marketplace Backend

# Debug mode
DEBUG=False

# Database settings
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=hyperlocal_marketplace

# JWT settings
JWT_SECRET_KEY=your-secret-key-change-in-production

# Firebase settings (Base64 encoded service account JSON)
FIREBASE_CREDENTIALS=

# AWS S3 settings
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=hyperlocal-marketplace

# Service ports
USER_SERVICE_PORT=8001
SELLER_SERVICE_PORT=8002
CUSTOMER_SERVICE_PORT=8003
CATALOG_SERVICE_PORT=8004
ADMIN_SERVICE_PORT=8005

# Service URLs (for local development)
USER_SERVICE_URL=http://localhost:8001
SELLER_SERVICE_URL=http://localhost:8002
CUSTOMER_SERVICE_URL=http://localhost:8003
CATALOG_SERVICE_URL=http://localhost:8004
ADMIN_SERVICE_URL=http://localhost:8005

# For Docker deployment, use these service URLs instead:
# USER_SERVICE_URL=http://user-service:8001
# SELLER_SERVICE_URL=http://seller-service:8002
# CUSTOMER_SERVICE_URL=http://customer-service:8003
# CATALOG_SERVICE_URL=http://catalog-service:8004
# ADMIN_SERVICE_URL=http://admin-service:8005
